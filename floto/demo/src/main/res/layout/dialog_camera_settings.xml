<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Contrast control slider. -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_contrast" />

    <com.google.android.material.slider.Slider
        android:id="@+id/contrastSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.6"
        android:valueTo="1.6"
        android:value="1.0"
        android:stepSize="0.05"
        android:layout_marginBottom="16dp" />

    <!-- Saturation control slider. -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_saturation" />

    <com.google.android.material.slider.Slider
        android:id="@+id/saturationSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.6"
        android:valueTo="1.6"
        android:value="1.0"
        android:stepSize="0.05"
        android:layout_marginBottom="16dp" />

    <!-- Brightness control slider. -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_brightness" />

    <com.google.android.material.slider.Slider
        android:id="@+id/brightnessSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.6"
        android:valueTo="1.6"
        android:value="1.0"
        android:stepSize="0.05" />

    <!-- Storage location selector. -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/storage_location" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/storageLocationButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/storage_select" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/exportPngCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export_png" />
</LinearLayout>
